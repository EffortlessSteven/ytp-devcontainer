{
  "name": "YTP Dev Env (Local Build - Rust 1.86)",
  "image": "mcr.microsoft.com/devcontainers/base:bookworm",

  "initializeCommand": "bash -c \".devcontainer/initialize.sh\"",

  "features": {
    "ghcr.io/devcontainers/features/nix:1": {
      "enableFlakes": true
    },
    "ghcr.io/devcontainers-contrib/features/direnv:1": {
      "version": "latest"
    }
  },

  "containerEnv": {
    "DEBIAN_FRONTEND": "noninteractive"
  },

  "onCreateCommand": "echo '[OnCreateCommand] Setting up initial environment...'",

  "postStartCommand": "bash -c 'cd \"${containerWorkspaceFolder}\" && bash .devcontainer/setup-nix.sh \"${containerWorkspaceFolder}\"' && echo '[postStartCommand] Basic Nix setup completed'",

  "postCreateCommand": "bash -c 'cd \"${containerWorkspaceFolder}\" && bash .devcontainer/postCreate.sh \"${containerWorkspaceFolder}\"'",

  "postAttachCommand": "bash -c 'echo \"[PostAttach] Allowing direnv in ${containerWorkspaceFolder}...\" && cd \"${containerWorkspaceFolder}\" && direnv allow . && echo \"[PostAttach] Direnv allowed. Devbox env should be active.\"'",

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash",
            "args": ["--login"]
          }
        },
        "rust-analyzer.check.command": "clippy"
      },
      "extensions": [
        "matklad.rust-analyzer",
        "tamasfe.even-better-toml",
        "eamodio.gitlens",
        "EditorConfig.EditorConfig",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "remoteUser": "vscode",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind,consistency=cached",
  "mounts": [
    "source=${env:HOME}${env:USERPROFILE}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,consistency=cached",
    "source=ytp-devbox-global-cache,target=/home/vscode/.local/share/devbox/global,type=volume",
    "source=ytp-cargo-home-cache,target=/home/vscode/.cargo,type=volume",
    "source=ytp-rustup-home-cache,target=/home/vscode/.rustup,type=volume"
  ]
} 